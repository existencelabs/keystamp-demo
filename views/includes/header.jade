header
    #wrapper
      // Navigation
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') 
            i.fa.fa-key.fa-fw
            | &nbspKeystamp Demo v1.0.0
        // Top Menu Items
        ul.nav.navbar-right.top-nav
          li
            a(href='#')
              i.fa.fa-fw.fa-bug 
              |  Bug Reports
          if isAlreadyLoggedin 
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-envelope
                b.caret
              ul.dropdown-menu.message-dropdown
                li.message-preview
                  a(href='#')
                    .media
                      span.pull-left
                        img.media-object(src='http://placehold.it/50x50', alt='')
                      .media-body
                        h5.media-heading
                          strong John Smith
                        p.small.text-muted
                          i.fa.fa-clock-o
                          |  Yesterday at 4:32 PM
                        p Lorem ipsum dolor sit amet, consectetur...
                li.message-footer
                  a(href='#') Read All New Messages
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-bell
                b.caret
              ul.dropdown-menu.alert-dropdown
                - var r = 0
                each val,index in notes
                  if val.read == false
                    r = r+1
                  if index < 4
                    li
                      br
                      .containder-fluid
                        small
                          | #{val.messages}
                          br
                          i #id: #{val.nid}
                          br
                          i #{val.createAt}

                        if val.type == 'success'
                          br
                          span.label.label-success #{val.type}
                        if val.type == 'warning'
                          br
                          span.label.label-warning #{val.type}
                        if val.type == 'danger'
                          br
                          span.label.label-danger #{val.type}
                        if val.type == 'default'
                          br
                          span.label.label-default #{val.type}
                li.divider
                li
                  a(href='#') View All
          if isAlreadyLoggedin 
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-user
                | &nbsp#{username}
                b.caret
              ul.dropdown-menu
                li
                  a(href='#')
                    i.fa.fa-fw.fa-envelope
                    |  Inbox
                li.divider
                li
                  a(href='/logout')
                    i.fa.fa-fw.fa-power-off
                    |  Log Out
          else
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-user
                |  Not Logged In
                b.caret
              ul.dropdown-menu
                li
                  a(href='/login')
                    i.fa.fa-fw.fa-user
                    |  Login
                li
                  a(href='/register')
                    i.fa.fa-fw.fa-gear
                    | Signup
