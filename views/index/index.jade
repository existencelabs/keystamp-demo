extends ../layouts/default
block content
  body
   // Sidebar Menu Items - These collapse to the responsive navigation menu on small screens
   .collapse.navbar-collapse.navbar-ex1-collapse
     ul.nav.navbar-nav.side-nav
       li.active
         a(href='http://keystamp.io', target='_blank')
           i.fa.fa-fw.fa-globe 
           |  Website
       li
         a(href='#')
           i.fa.fa-fw.fa-envelope
           |  Inbox
       li
         a(href='#')
           i.fa.fa-fw.fa-exchange
           |  Send Documents
       li
         a(href='#')
           i.fa.fa-fw.fa-pencil-square 
           |  Sign Document
       li
         a(href='#')
           i.fa.fa-fw.fa-check-circle 
           |  Verify Document
       li
         a(href='#')
           i.fa.fa-fw.fa-key
           |  Get an Xpub key
       li
         a(href='#')
           i.fa.fa-fw.fa-link
           | Blockchain Explorer

   // /.navbar-collapse
  #page-wrapper
   .container-fluid
     // Page Heading
     .row
       .col-lg-9.col-md-offset-2
         h1.page-header
           | Keystamps 
           small Proof of process demo
         ol.breadcrumb
           li.active
             i.fa.fa-dashboard
             |  System message to user here
     // /.row
     .row
       .col-lg-9.col-md-offset-2
         .alert.alert-info.alert-dismissable
           button.close(type='button', data-dismiss='alert', aria-hidden='true') Ã—
           i.fa.fa-info-circle
           strong &nbspRead Out
            |&nbsp
           a.alert-link(href='https://github.com/existencelabs/keystamp-whitepaper') Keystamp Whitepaper
           |  on Github!
          // /.row
          .row
            .col-lg-3.col-md-6
              .panel.panel-primary
                .panel-heading
                  .row
                    .col-xs-3
                      i.fa.fa-comments.fa-5x
                    .col-xs-9.text-right
                      .huge 26
                      div New Comments!
                a(href='#')
                  .panel-footer
                    span.pull-left View Details
                    span.pull-right
                      i.fa.fa-arrow-circle-right
                    .clearfix
            .col-lg-3.col-md-6
              .panel.panel-green
                .panel-heading
                  .row
                    .col-xs-3
                      i.fa.fa-tasks.fa-5x
                    .col-xs-9.text-right
                      .huge 12
                      div New Tasks!
                a(href='#')
                  .panel-footer
                    span.pull-left View Details
                    span.pull-right
                      i.fa.fa-arrow-circle-right
                    .clearfix
            .col-lg-3.col-md-6
              .panel.panel-yellow
                .panel-heading
                  .row
                    .col-xs-3
                      i.fa.fa-shopping-cart.fa-5x
                    .col-xs-9.text-right
                      .huge 124
                      div New Orders!
                a(href='#')
                  .panel-footer
                    span.pull-left View Details
                    span.pull-right
                      i.fa.fa-arrow-circle-right
                    .clearfix
            .col-lg-3.col-md-6
              .panel.panel-red
                .panel-heading
                  .row
                    .col-xs-3
                      i.fa.fa-support.fa-5x
                    .col-xs-9.text-right
                      .huge 13
                      div Support Tickets!
                a(href='#')
                  .panel-footer
                    span.pull-left View Details
                    span.pull-right
                      i.fa.fa-arrow-circle-right
                    .clearfix
     // /.row

     .row
       .col-lg-4.col-md-offset-2
         .panel.panel-default
           .panel-heading
             h3.panel-title
               i.fa.fa-clock-o.fa-fw
               |  Tasks Panel
           .panel-body
             .list-group
               a.list-group-item(href='#')
                 span.badge just now
                 i.fa.fa-fw.fa-calendar
                 |  Calendar updated
               a.list-group-item(href='#')
                 span.badge 4 minutes ago
                 i.fa.fa-fw.fa-comment
                 |  Commented on a post
               a.list-group-item(href='#')
                 span.badge 23 minutes ago
                 i.fa.fa-fw.fa-truck
                 |  Order 392 shipped
               a.list-group-item(href='#')
                 span.badge 46 minutes ago
                 i.fa.fa-fw.fa-money
                 |  Invoice 653 has been paid
               a.list-group-item(href='#')
                 span.badge 1 hour ago
                 i.fa.fa-fw.fa-user
                 |  A new user has been added
               a.list-group-item(href='#')
                 span.badge 2 hours ago
                 i.fa.fa-fw.fa-check
                 |  Completed task: "pick up dry cleaning"
               a.list-group-item(href='#')
                 span.badge yesterday
                 i.fa.fa-fw.fa-globe
                 |  Saved the world
               a.list-group-item(href='#')
                 span.badge two days ago
                 i.fa.fa-fw.fa-check
                 |  Completed task: "fix error on sales page"
             .text-right
               a(href='#')
                 | View All Activity 
                 i.fa.fa-arrow-circle-right
       .col-lg-4
         .panel.panel-default
           .panel-heading
             h3.panel-title
               i.fa.fa-money.fa-fw
               |  Transactions Panel
           .panel-body
             .table-responsive
               table.table.table-bordered.table-hover.table-striped
                 thead
                   tr
                     th Order #
                     th Order Date
                     th Order Time
                     th Amount (USD)
                 tbody
                   tr
                     td 3326
                     td 10/21/2013
                     td 3:29 PM
                     td $321.33
                   tr
                     td 3325
                     td 10/21/2013
                     td 3:20 PM
                     td $234.34
 
                  .text-right
                    a(href='#')
                      | View All Transactions 
                      i.fa.fa-arrow-circle-right
          // /.row
        // /.container-fluid
      // /#page-wrapper
    // /#wrapper
    // jQuery
    script(src='js/jquery.js')
    // Bootstrap Core JavaScript
    script(src='js/bootstrap.min.js')

